{
    "$schema": "https://opencode.ai/config.json",
    "model": "anthropic/claude-sonnet-4-6",
    "small_model": "anthropic/claude-sonnet-4-5",
    "disabled_providers": [
        "opencode"
    ],
    "autoupdate": true,
    "agent": {
        "ask": {
            "description": "Answers questions using read-only access and bash commands, without modifying files",
            "mode": "primary",
            "model": "anthropic/claude-opus-4-6",
            "tools": {
                "write": false,
                "edit": false,
                "bash": true
            }
        }
    }
}
